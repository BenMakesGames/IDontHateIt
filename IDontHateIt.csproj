<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <Nullable>enable</Nullable>
    <WarningsAsErrors>Nullable</WarningsAsErrors>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <RepositoryUrl>https://github.com/BenMakesGames/IDontHateIt</RepositoryUrl>
    <RootNamespace>BenMakesGames.IDontHateIt</RootNamespace>
    <Authors>Ben Hendel-Doying</Authors>
    <Company />
    <Copyright>2022 Ben Hendel-Doying</Copyright>
    <Description>BenMakesGames.IDontHateIt provides an attribute that allows you to convince yourself and others that some bad code isn't actually that bad.</Description>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <AssemblyVersion>1.0.1</AssemblyVersion>
    <Version>1.0.1</Version>
  </PropertyGroup>

  <ItemGroup>
    <None Include="LICENSE" Pack="true" PackagePath="" />
    <None Include="README.md" Pack="true" PackagePath="" />
  </ItemGroup>

</Project>
